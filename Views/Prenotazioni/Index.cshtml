﻿@model List<Hotel.Models.Prenotazione>
@{
    ViewBag.Title = "Index";
}

<h2 class="mb-3">Lista Prenotazioni</h2>

@if (Model.Count == 0)
{
    <h3>Non ci sono prenotazioni</h3>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Cliente</th>
                <th scope="col">Numero Camera</th>
                <th scope="col">Anno</th>
                <th scope="col">Soggiorno Dal</th>
                <th scope="col">Fino Al</th>
                <th scope="col">Data prenotazione</th>
                <th scope="col">Tipologia</th>
                <th scope="col">Caparra</th>
                <th scope="col">Tariffa</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pren in Model)
            {
                <tr>
                    <td>@pren.Nome @pren.Cognome</td>
                    <td>@pren.IdCamera</td>
                    <td>@pren.Anno</td>
                    <td>@pren.SoggiornoInizio.ToString("dd/MM/yyyy")</td>
                    <td>@pren.SoggiornoFine.ToString("dd/MM/yyyy")</td>
                    <td>@pren.DataPrenotazione</td>
                    <td>@pren.TipoSoggiorno</td>
                    <td>@String.Format("{0:0.##}", pren.Caparra) €</td>
                    <td>@String.Format("{0:0.##}", pren.Tariffa) €</td>
                </tr>
            }
        </tbody>
    </table>
    @Html.ActionLink("Aggiungi Prenotazione", "Add", "Prenotazioni", null, new { @class = "btn btn-primary" })
}
